<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/relative1"
    android:background="@color/colorGrey">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/colorwheel"
        android:id="@+id/colorWheel"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmColor"
        android:background="@drawable/confirm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelColor"
        android:background="@drawable/cross"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/colorPreview"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/cancelColor"
        android:layout_below="@+id/colorWheel"
        android:layout_toRightOf="@+id/confirmColor"
        android:layout_toEndOf="@+id/confirmColor" />

</RelativeLayout>